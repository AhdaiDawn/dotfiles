ring-ver-color=83a598ff
ring-wrong-color=cc241dff

# 线条颜色
line-color=282828ff
line-clear-color=282828ff
line-ver-color=282828ff
line-wrong-color=282828ff

# 按键反馈颜色
key-hl-color=b8bb26ff
bs-hl-color=fb4934ff

# 字体颜色
