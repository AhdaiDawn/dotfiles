# --- 核心设置 ---
ignore-empty-password
show-failed-attempts
daemonize

# --- 特效设置 (swaylock-effects 独有) ---
# 截图当前屏幕作为背景
screenshots

# 模糊效果 (半径x强度)，7x5 是比较平衡的数值
effect-blur=7x5

# 晕影效果 (让四周变暗，突出中间)
effect-vignette=0.5:0.5

# 像素化 (可选，如果不喜欢模糊可以改用这个)
# effect-pixelate=5

# 淡入效果 (秒)
fade-in=0.2

# --- 界面布局 ---
# 显示时钟和日期
clock
timestr=%H:%M
datestr=%Y-%m-%d

# 指示器(圆环)设置
indicator
indicator-radius=100
indicator-thickness=7

# --- 字体设置 ---
font=JetBrainsMono Nerd Font
font-size=30

# --- Gruvbox 颜色配置 ---

# 圆环内部颜色 (输入密码时)
inside-color=282828ff
